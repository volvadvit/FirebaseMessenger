<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:layout_marginBottom="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/input_photo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/person"
        app:civ_border_width="1dp"
        app:civ_border_color="@android:color/white"/>

    <TextView
        android:id="@+id/input_text"
        android:text="Message will be here"
        style="@style/chat_text_style"
        android:layout_marginStart="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/input_photo"
        app:layout_constraintStart_toEndOf="@+id/input_photo"
        app:layout_constraintTop_toTopOf="@+id/input_photo" />
</androidx.constraintlayout.widget.ConstraintLayout>